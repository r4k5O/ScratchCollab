{
  "manifest_version": 2,
  "name": "Scratch Collaboration Extension",
  "version": "1.0.0",
  "description": "Collaborate on Scratch projects in real-time",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://scratch.mit.edu/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/projects/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Scratch Collaboration",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "server/*",
    "translations/*"
  ],
  "applications": {
    "gecko": {
      "id": "scratchcollab@r4k5O.github.com",
      "strict_min_version": "57.0"
    }
  }
}