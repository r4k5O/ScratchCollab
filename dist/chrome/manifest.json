{
  "manifest_version": 3,
  "name": "Scratch Collaboration Extension",
  "version": "1.0.0",
  "description": "Collaborate on Scratch projects in real-time",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://scratch.mit.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/projects/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scratch Collaboration"
  },
  "web_accessible_resources": [
    {
      "resources": ["server/*", "translations/*", "welcome.html"],
      "matches": ["https://scratch.mit.edu/*"]
    }
  ]
}